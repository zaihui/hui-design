{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./test/**/*.ts",
    "./test/**/*.tsx",
    "./typings/*.ts",
    "./global.d.ts"
  ],
  "exclude": ["node_modules", "dist", "lib"],
  "compileOnSave": false
}
